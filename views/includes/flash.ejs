<% if(success && success.length){ %>
    <div class="mt-4 mb-2 me-2 alert alert-success alert-dismissible fade show col-lg-4 col-md-6 col-sm-8 col-10 position-fixed shadow top-0 end-0 animate-alert-slide z-index-high"
        role="alert">
        <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if(error && error.length){ %>
            <div class="mt-4 mb-2 me-2 alert alert-danger alert-dismissible fade show col-lg-4 col-md-6 col-sm-8 col-10 position-fixed shadow top-0 end-0 animate-alert-slide z-index-high"
                role="alert">
                <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>